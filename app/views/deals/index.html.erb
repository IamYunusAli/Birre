      <div id="<%= dom_id deal %>" class="">
      <div class="p-3 flex flex-col gap-4 border-solid border-2">
    <p>
      <strong>Name:</strong>
      <%= deal.name %>
    </p>

    <p>
      <strong>Amount:</strong>
      $<%=  + deal.amount %>
    </p>
  </div>
</div>
    <% end %>
  </div>

  <div class="fixed bottom-0 p-3 bg-[#5fb523] text-white w-full">
    <button class="p-3 border-solid border-2 w-full">
      <%= link_to "Add Transaction", new_category_deal_path %>
    </button>
  </div>
</div>